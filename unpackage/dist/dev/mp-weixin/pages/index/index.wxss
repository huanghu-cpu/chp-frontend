
.container.data-v-57280228 {
	min-height: 100vh;
	background-color: #f8f9fa;
}

/* 导航栏样式 - 闲鱼风格布局 */
.navbar.data-v-57280228 {
	background-color: #2563eb;
	width: 100%;
	position: fixed;
	top: 0;
	left: 0;
	z-index: 999;
	box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.navbar-content.data-v-57280228 {
	padding: 30rpx;
	padding-bottom: 30rpx;
	display: flex;
	align-items: center;
	justify-content: flex-start;
	height: 110rpx;
}

/* 左侧文字 */
.navbar-left.data-v-57280228 {
	flex-shrink: 0;
	padding-top: 85rpx; /* 让左侧文字向下移动 */
}
.navbar-title.data-v-57280228 {
	color: #ffffff;
	font-size: 36rpx;
	font-weight: bold;
}

/* 中间搜索框 - 占据主要空间 */
.navbar-center.data-v-57280228 {
	flex: 1;
	margin: 0 20rpx;
	padding-top: 85rpx; /* 让搜索框向下移动 */
}
.search-bar.data-v-57280228 {
	width: 60%; 
	height: 60rpx;
	background-color: transparent; /* 中间透明 */
	border: 1px solid #000000; /* 细黑边框 */
	border-radius: 36rpx;
	display: flex;
	align-items: center;
	margin-left: 15rpx;
	box-shadow: none; /* 移除阴影效果 */
}
.search-icon.data-v-57280228 {
	font-size: 28rpx;
	color: rgba(128, 128, 128, 0.8); /* 匹配输入框的透明灰色 */
	margin-right: 12rpx;
}
.search-input.data-v-57280228 {
	flex: 1;
	height: 100%;
	background: transparent;
	border: none;
	outline: none;
	color: rgba(128, 128, 128, 0.8); /* 透明灰色字体 */
	font-size: 28rpx;
}
.content.data-v-57280228 {
	padding: 40rpx 30rpx;
	padding-top: 220rpx; /* 为固定导航栏留出空间 */
}
.welcome-text.data-v-57280228 {
	font-size: 32rpx;
	color: #666666;
	text-align: center;
	display: block;
	margin-top: 40rpx;
}

